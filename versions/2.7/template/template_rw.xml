<!DOCTYPE EvaluatorConfiguration SYSTEM "file://../xml/evaluator.dtd">
<EvaluatorConfiguration name="readwrite" testDuration="1200"
	autoCommit="false" statusInterval="500" csvFile="results.out" separator=",">

    <DataSource name="s1" driver="com.mysql.jdbc.Driver"
        url="jdbc:mysql://@@HOSTREF@@/evaluator@qos=RW_STRICT&amp;createDatabaseIfNotExist=true&amp;autoReconnect=true"
        user="@@USER@@"
        password="@@PASSWORD@@"/>
     
    <DataSource name="s2" driver="com.mysql.jdbc.Driver"
        url="jdbc:mysql://@@HOSTREF@@/evaluator@qos=RO_RELAXED&amp;autoReconnect=true"
        user="@@USER@@"
        password="@@PASSWORD@@"/>

    <TableGroup name="ta" size="1000" dataSource="s1"> 
        <ThreadGroup name="A" dataSource="s1" threadCount="@@WTHREADS@@" thinkTime="10" 
            updates="20" deletes="20" inserts="20" readSize="1" 
            rampUpInterval="30" rampUpIncrement="1" reconnectInterval="10" /> 
        <ThreadGroup name="B" dataSource="s2" threadCount="@@RTHREADS@@" thinkTime="10"
            readSize="1000"
            rampUpInterval="30" rampUpIncrement="2" reconnectInterval="10" />
    </TableGroup>
</EvaluatorConfiguration>

